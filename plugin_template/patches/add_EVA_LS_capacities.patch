@use 'constants';

:parts #eva_kerbal > resourceContainers {
    +CarbonDioxide {
        capacityUnits: $EVA_CAPACITY_DAYS * $OXYGEN_PER_DAY;
        initialUnits: 0.0;
    }
    +WasteWater {
        capacityUnits: $EVA_CAPACITY_DAYS * $WATER_PER_DAY;
        initialUnits: 0.0;
    }
    +Oxygen {
        capacityUnits: $EVA_CAPACITY_DAYS * $OXYGEN_PER_DAY;
        initialUnits: 0.0;
    }
    +Water {
        capacityUnits: $EVA_CAPACITY_DAYS * $WATER_PER_DAY;
        initialUnits: 0.0;
    }
    +Food {
        capacityUnits: $EVA_CAPACITY_DAYS * $FOOD_PER_DAY;
        initialUnits: 0.0;
    }
    +Waste {
        capacityUnits: $EVA_CAPACITY_DAYS * $FOOD_PER_DAY;
        initialUnits: 0.0;
    }
}

